<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%=@post.errors.count%>个错误:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title ,"标题"%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text,"正文" %><br>
    <%= f.text_area :text, size: "100x30" %>
  </div>
  <div class="actions">
    <%= f.submit '提交' %>
  </div>
<% end %>
