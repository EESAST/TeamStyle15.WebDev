<div id="right">
  <h3>导航</h3>
  <ul>
    <% if !(current_user=User.find_by_id(session[:user_id])) %>
      <li><%= link_to "注册", new_user_path %></li><!--注册(链接)-->
      <li><%= link_to "登录", login_path%></li><!--登录-->
    <% else %>
      <li><%= link_to "注销", logout_path, :method => :delete %></li><!--注销-->
      <li><%= link_to "发表帖子", new_post_path %></li>
      <li><%= link_to "浏览帖子", posts_path %></li>
    <% end %>

    
    <% if User.find_by_id(session[:user_id]) %>
      <li><%= link_to "用户主页", user_index_path%></li>
