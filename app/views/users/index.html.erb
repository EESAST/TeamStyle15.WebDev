
  <div class="box-circle">
    <div class="box-title">Side Bar</div>
    <div class="box-content nav">
    <li><%=link_to "注销", logout_path, :method => :delete %></li>
    <li><%=link_to '创建新用户', new_user_path %></li>
    <li><%=link_to '帖子列表', posts_path%></li>
    <li><%=link_to '评论列表', comments_path%></li>
    <li><%=link_to '队伍列表', teams_path%></li>
    <li><%=link_to '管理主页', admin_index_path %></li>
    </div>
  </div>

<div class="box-circle">
<div class="box-title">用户列表</div>
<div class="box-content">
<div style="font-size:12px;text-align:right">共<%=@users.count()%>个用户</div>
<table>
  <thead>
    <tr>
      <th>用户名</th>
      <th>头像</th>
      <th>电子邮箱</th>
      <th>姓名</th>
      <th>学号</th>
      <th>所在队伍</th>
      <th>类别</th>
      <th>注册时间</th>
      <th>修改</th>
      <th>删除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name,user %></td>
        <td><%= image_tag user.portrait_path, :class => "img-small" %></td>
        <td><%= user.email %></td>
        <td><%= user.true_name %></td>
        <td><%= user.student_number %></td>
        <td><%= (team_id=user.team_id)?(Team.find(team_id).name):"——" %></td>
        <td>
          <% if user.admin? %>
            <%= "管理员"%>
          <% else %>
            <%= user.user_type %>
          <% end %>
        </td>
        <td><%=user.created_at.in_time_zone('Beijing').strftime('%Y/%m/%d')%></td>
        <td><%= link_to '修改', edit_user_path(user) %></td>
        <%if not user.admin?%>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: '此操作不可恢复。确定？' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
</div>
</div>
